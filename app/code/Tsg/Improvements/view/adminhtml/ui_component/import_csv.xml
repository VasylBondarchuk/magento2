<?xml version="1.0" encoding="UTF-8"?>
<listing
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">import_csv.import_csv_data_source</item>
            <item name="deps" xsi:type="string">import_csv.import_csv_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">import_csv_columns</item>
    </argument>
    <dataSource name="sample_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Tsg_Improvements::resource</aclResource>
        <dataProvider class="Tsg\Improvements\Ui\Component\DataProvider\CsvImport" name="import_csv_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <columns name="import_csv_columns">
        <column name="sku" sortOrder="10">
            <settings>
                <label translate="true">SKU</label>
            </settings>
        </column>
        <column name="qty" sortOrder="20">
            <settings>
            <label translate="true">QTY</label>
            </settings>
        </column>
        <column name="source" sortOrder="30">
            <settings>
                <label translate="true">SOURCE</label>
            </settings>
        </column>
    </columns>
</listing>